@model Cloth

@{
    ViewData["Title"] = "Upload product";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label">Product Name:</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label">Product Description:</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-sm-2 control-label">Product Price:</label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
    <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Cloth Image</label>
    <div class="col-sm-10">
        <input asp-for="ImageUrl" type="file" name="img" accept="image/*" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Upload Product</button>
        </div>
    </div>
</form>
